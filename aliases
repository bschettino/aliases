# Git aliases
alias gs='git status'
alias gc='git commit'
alias gca='git commit --amend'
alias gd='git diff'
alias gr='git reset'
alias gck='git checkout'
alias gckm='git checkout master'
alias gckd='git checkout development'
alias ga='git add'
alias gps='git push'
alias gpso='git push origin'
alias gpsm='git push origin master'
alias gpsd='git push origin development'
alias gpl='git pull'
alias gb="git branch"
alias gst='git stash'
alias gstp='git stash pop'
alias grb='git rebase'
alias grbd='git rebase development'
alias grbm='git rebase master'
alias grbc='git rebase --continue'
alias gl='git log'
alias glol='git log --oneline'

# Gitflow aliases
alias gff='git flow feature'
alias gffs='git flow feature start'
alias gfff='git flow feature finish'
alias gfhs='git flow hotfix start'
alias gfhf='git flow hotfix finish'

# Rails aliases
alias rc='rails console'
alias rs='rails server'
alias rg='rails generate'
alias rgm='rails generate migration'
alias rgs='rails generate scaffold'
alias rdbd='rake db:drop'
alias rdbm='rake db:migrate'
alias rdbc='rake db:create'
alias rdbr='rake db:rollback'
alias rdbmr='rake db:migrate:redo'
alias rdbs='rake db:seed' 
alias rdbf='rake db:drop; rake db:create; rake db:migrate'
alias rdbre='rake db:reset'

# Rubocop aliases
alias rbc='rubocop'
alias rbca='rubocop -a'

# Bundle aliases
alias bi='bundle install'
alias bu='bundle update'

# Node aliases
alias nw='npm run watch'
alias nd='npm run deploy'

