# Git aliases
alias gir='git'
alias gs='git status'
alias gc='git commit'
alias gca='git commit --amend'
alias gd='git diff'
alias gr='git reset'
alias gck='git checkout'
alias gckm='git checkout master'
alias gckma='git checkout main'
alias gckqa='git checkout qa'
alias gckdev='git checkout develop'
alias gckd='git checkout develop'
alias ga='git add'
alias gps='git push'
alias gpso='git push origin'
alias gpsm='git push origin master'
alias gpsma='git push origin master'
alias gpsqa='git push origin qa'
alias gpsdev='git push origin develop'
alias gpsd='git push origin develop'
alias gpl='git pull'
alias gb="git branch"
alias gst='git stash'
alias gstp='git stash pop'
alias gl='git log'
alias glol='git log --oneline'
alias gm='git merge'
alias gmo='git merge origin'
alias gma='git merge --abort'
alias grb='git rebase'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'

# Rails aliases
alias rc='bundle exec rails console'
alias rs='bundle exec rails server'
alias rg='bundle exec rails generate'
alias rgm='bundle exec rails generate migration'
alias rgmi='bundle exec rails generate migration'
alias rgma='bundle exec rails generate mailer'
alias rgmo='bundle exec rails generate model'
alias rgs='bundle exec rails generate scaffold'
alias rdbd='bundle exec rake db:drop'
alias rdbm='bundle exec rake db:migrate'
alias rdbmd='bundle exec rake db:migrate:with_data'
alias rdbc='bundle exec rake db:create'
alias rdbr='bundle exec rake db:rollback'
alias rdbrd='bundle exec rake db:rollback:with_data'
alias rdbmr='bundle exec rake db:migrate:redo'
alias rdbs='bundle exec rake db:seed'
alias rdbf='bundle exec rake db:drop; bundle exec rake db:create; bundle exec rake db:migrate'
alias rdbre='bundle exec rake db:reset'
alias rcheck='bundle exec rspec; bundle exec rubocop -a'
alias rrg='bundle exec rake routes | grep '

# Rubocop aliases
alias rbc='bundle exec rubocop'

# Bundle aliases
alias bi='bundle install'
alias bu='bundle update'
alias be='bundle exec'

# Node aliases
alias nw='npm run watch'
alias nd='npm run deploy'

